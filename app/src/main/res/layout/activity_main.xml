<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_dark"
    tools:context="udacity.irene.com.appportfolio.MainActivity">

    <TextView
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large"
        android:text="@string/my_nanodegree_apps"/>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button_popular_movies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/popular_movies"/>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button_stock_hawk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stock_hawk"/>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button_build_it_bigger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/build_it_bigger"/>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button_make_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/make_your_app_material"/>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button_go_ubiquitous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_ubiquitous"/>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button_capstone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/capstone_my_own_app"/>
</LinearLayout>
